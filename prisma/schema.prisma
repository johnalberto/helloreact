generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement()) // Primary Key Identity(1,1)
  title     String
  priority  String   // PodrÃ­amos usar Enums, pero String estÃ¡ bien por ahora
  isCompleted Boolean @default(false) // ðŸ‘ˆ Campo Nuevo (False por defecto)
  createdAt DateTime @default(now()) // GetDate()
  updatedAt DateTime @updatedAt
  userId      String   @default("user_demo") // Valor por defecto temporal para no romper tareas viejas
  // ðŸ‘‡ 1. NUEVO: RelaciÃ³n con CategorÃ­a
  // Esto crea la columna "categoryId" en la tabla Task (la Clave ForÃ¡nea)
  categoryId  Int?     // El ? significa que es opcional (por si tienes tareas viejas sin categorÃ­a)
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  color     String   @default("#000000")
  
  // ðŸ‘‡ CAMBIO: Agregamos '?' para que pueda ser nulo (Global)
  userId    String?  
  
  tasks     Task[]
}