generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement()) // Primary Key Identity(1,1)
  title     String
  priority  String   // PodrÃ­amos usar Enums, pero String estÃ¡ bien por ahora
  isCompleted Boolean @default(false) // ðŸ‘ˆ Campo Nuevo (False por defecto)
  createdAt DateTime @default(now()) // GetDate()
  updatedAt DateTime @updatedAt
  userId      String   @default("user_demo") // Valor por defecto temporal para no romper tareas viejas
}